<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DemoCart Regression Suite" verbose="3" thread-count="3" parallel="tests">
	<listeners>
		<listener
			class-name="com.qa.DemoCart.Listeners.ExtentReportListener" />
		<listener
			class-name="com.qa.DemoCart.Listeners.TestAllureListener" />
	</listeners>
	<test name="Login Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.DemoCart.tests.LoginPageTest" />
		</classes>
	</test> <!-- Test -->
	<test name="Account Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.DemoCart.tests.AccountsPageTest" />
		</classes>
	</test> <!-- Test -->
	<test name="Product Info Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.DemoCart.tests.ProductInfoTest" />
		</classes>
	</test> <!-- Test -->
	<test name="Registration Page Test">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="com.qa.DemoCart.tests.RegistrationPageTest" />
		</classes>
	</test> <!-- Test -->
</suite> <!-- Suite -->